@model IEnumerable<webdemo.Context.Brand>

@{
    ViewBag.Title = "Trash";
}
<h2 style="margin-left: 10px">Thùng rác</h2>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">

        @Html.ActionLink("Quay lạy", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên thương hiệu</th>
            <th>Hình ảnh thương hiệu</th>
            <th>@Html.DisplayNameFor(model => model.Slug)</th>
            <th>Hiển thị trang chủ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <img src="~/Content/images/brands/@item.Image" alt="Brand Image" class="brand-image" />
                }
                else
                {
                    <p>Chưa có hình ảnh</p>
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.Slug)</td>
            <td>@Html.DisplayFor(modelItem => item.ShowOnHomePage)</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" title="Sửa">
                    <i class="fas fa-edit"></i>
                </a> |
                <a href="@Url.Action("Details", new { id = item.Id })" title="Chi tiết">
                    <i class="fas fa-info-circle"></i>
                </a> |
                <a href="@Url.Action("RestoreBrand", new { id = item.Id })" title="Khôi phục">
                    <i class="fas fa-undo"></i>
                </a> |
                <a href="@Url.Action("Delete", new { id = item.Id })"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')"
                   title="Xóa vĩnh viễn">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<style>
    /* Button Styles */
    .btn-success, .btn-warning, .btn-info, .btn-danger {
        border-radius: 5px;
        font-size: 14px;
        text-decoration: none;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Brand Image Styles */
    .brand-image {
        max-width: 80px;
        max-height: 80px;
        border-radius: 5px;
        object-fit: cover;
    }

    /* Table Styles */
    .table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #f1f1f1;
            color: #333;
        }

        .table tr:hover {
            background-color: #f9f9f9;
        }

        .table td a {
            color: #6c757d;
            text-decoration: none;
        }

            .table td a:hover {
                text-decoration: underline;
            }
</style>
